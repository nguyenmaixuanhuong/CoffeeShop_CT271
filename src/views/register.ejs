
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <h3 class="mt-4 text-center text-uppercase">Đăng kí tài khoản</h3>
                    <form class=" mt-2" method="post" action="/register/add">
                        <div class="form-group">
                            <label for="name">Tên của bạn:</label>
                            <input type="text" class="form-control form-input " name="name" id="name"
                                aria-describedby="name" placeholder="Nhập tên của bạn" required>
                        </div>
                        <div class="form-group">
                            <label for="phone"> Số điện thoại:</label>
                            <input type="text" class="form-control form-input" name="phone" id="phone"
                                aria-describedby="phone" placeholder="Nhập số điện thoại" required>

                        </div>
                        <div class="pl-3 mb-2">
                            <span class="text-danger ">
                                <%= message.phoneError %>
                            </span>
                            <span class="text-danger ">
                                <%= message.invalidPhone %>
                            </span>
                        </div>
                        <div class="form-group mb-1">
                            <label for="password"> Mật khẩu:</label>
                            <input type="password" class="form-control form-input" name="password" id="password"
                                placeholder="Nhập mật khẩu" required>
                        </div>
                        <div class="pl-3 mb-3">
                            <span class="text-danger ">
                                <%= message.passwordError %>
                            </span>
                        </div>
                        <div class="form-group mb-1">
                            <label for="password">Nhập lại Password:</label>
                            <input type="password" class="form-control form-input" name="repassword" id="repassword"
                                placeholder="Nhập lại Password" required>
                            <span id="message" class="text-danger pl-3"></span>

                        </div>
                        <div class="pl-3 mb-3">
                            <span class="text-success">
                                <%= message.message %>
                            </span>
                        </div>
                        <div class="form-check pl-0">
                            <button type="submit" class="btn w-100 form-input font-weight-bold text-white"
                                style="background-color: #e39f29;" onclick="checkPasscfm()">Đăng kí</button>
                        </div>
                        <div class="pl-0 mt-2 text-center">
                            <p class="d-inline">Bạn đã có tài khoản ?</p>
                            <a href="/login" class="d-inline text-danger"> Đăng nhập </a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    <script>
        function checkPasscfm() {
            let password = document.getElementById("password").value;
            let passwordcfm = document.getElementById("repassword").value;
            let message = document.getElementById("message");

            if (password != passwordcfm) {
                message.textContent = "Nhập lại mật khẩu không khớp";
                event.preventDefault();
            }
        }
    </script>
